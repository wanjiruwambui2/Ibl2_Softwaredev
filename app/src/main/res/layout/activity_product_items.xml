<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductItems">



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/productLL"
        >

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/productImageView2"
            android:layout_width="144dp"
            android:layout_height="129dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_menu_camera" />

        <EditText
            android:id="@+id/nameET"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:fontFamily="monospace"
            android:hint="Product name"
            android:inputType="text"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/manDatET"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:hint="manufacture Date"
            android:inputType="date"
            android:textColor="@color/black"/>




        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/expDateET"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:fontFamily="monospace"
            android:layout_gravity="center_horizontal"
            android:inputType="date"
            android:hint="Expiry Date"
            android:textColor="@color/black"/>


        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_below="@+id/button3"
            android:layout_gravity="center"
            android:visibility="gone"/>


        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/productImageView1"
            android:layout_width="144dp"
            android:layout_height="129dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_menu_camera" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Delete this product"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:focusable="true"
            android:clickable="true"
            />

    </LinearLayout>

</ScrollView>